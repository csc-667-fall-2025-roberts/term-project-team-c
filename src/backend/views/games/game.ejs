<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Game <%= id %> - Uno</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/css/bundle.css" />
    <script type="module" src="/js/game.js" defer></script>
    <script type="module" src="/js/chat.js" defer></script>
  </head>
  <%
    function getCardDisplayValue(symbol) {
      const symbolMap = {
        'zero': '0', 'one': '1', 'two': '2', 'three': '3', 'four': '4',
        'five': '5', 'six': '6', 'seven': '7', 'eight': '8', 'nine': '9',
        'skip': '‚äò', 'swap': '‚áÑ', 'plus_two': '+2', 'plus_four': '+4', 'wildcard': 'üåà'
      };
      return symbolMap[symbol] || symbol;
    }
  %>
  <body class="game-page" data-game-id="<%= id %>" data-user-id="<%= currentUserId %>" data-is-host="<%= isHost %>">
    <!-- Waiting overlay for lobby state -->
    <% if (state === 'lobby') { %>
    <div id="waiting-overlay" style="
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.7);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 1500;
      backdrop-filter: blur(3px);
    ">
      <div style="
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 40px 60px;
        border-radius: 20px;
        text-align: center;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
        max-width: 500px;
      ">
        <div style="font-size: 48px; margin-bottom: 20px;">‚è≥</div>
        <div style="font-size: 28px; font-weight: bold; margin-bottom: 15px;">
          Waiting for Game to Start
        </div>
        <div style="font-size: 16px; opacity: 0.9; margin-bottom: 20px;">
          <% if (isHost) { %>
            You are the host. Click "Start Game" when ready!
          <% } else { %>
            Waiting for the host to start the game...
          <% } %>
        </div>
      </div>
    </div>
    <% } %>
    <div class="game-container">
      <div class="game-header" style="position: relative; z-index: 2000;">
        <h1>
          <img src="/favicon.svg" class="site-logo" alt="Uno Logo" />
          <%= name || `Game ${id}` %>
          <% if (isHost) { %>
          <span style="
            background: linear-gradient(135deg, #f39c12 0%, #f1c40f 100%);
            color: #2c3e50;
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 14px;
            font-weight: bold;
            margin-left: 12px;
            display: inline-block;
            box-shadow: 0 2px 8px rgba(243, 156, 18, 0.4);
          ">üëë HOST</span>
          <% } %>
          <span class="game-meta-info">‚Ä¢ <%= state %> ‚Ä¢ <%= max_players %> players</span>
        </h1>
        <% if (state !== 'active' && isHost) { %>
        <form method="post" action="/games/<%= id %>/start">
          <button type="submit" style="
            background: #27ae60;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.2s, transform 0.1s;
          " onmouseover="this.style.background='#229954'; this.style.transform='scale(1.05)'"
             onmouseout="this.style.background='#27ae60'; this.style.transform='scale(1)'">
            üéÆ Start Game
          </button>
        </form>
        <% } else if (state !== 'active') { %>
        <div style="
          background: rgba(255, 255, 255, 0.1);
          color: rgba(255, 255, 255, 0.7);
          padding: 8px 16px;
          border-radius: 8px;
          font-size: 14px;
        ">
          Waiting for host...
        </div>
        <% } %>
        <a href="/lobby" style="color: white; text-decoration: none">Exit Game</a>
      </div>

      <div class="game-layout">
        <div class="opponent-card opponent-top">
          <div class="player-info">
            <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=Cpu" class="player-avatar" />
            <div style="text-align: center">CPU (Top)</div>
          </div>
          <div class="opponent-hand">
            <div class="playing-card back"></div>
            <div class="playing-card back"></div>
            <div class="playing-card back"></div>
          </div>
        </div>

        <div class="opponent-card opponent-left">
          <div class="player-info">
            <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=P2" class="player-avatar" />
            <div>Player 2</div>
          </div>
          <div class="opponent-hand">
            <div class="playing-card back"></div>
            <div class="playing-card back" style="margin-top: -80px"></div>
            <div class="playing-card back" style="margin-top: -80px"></div>
          </div>
        </div>

        <div class="opponent-card opponent-right">
          <div class="player-info">
            <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=P3" class="player-avatar" />
            <div>Player 3</div>
          </div>
          <div class="opponent-hand">
            <div class="playing-card back"></div>
            <div class="playing-card back" style="margin-top: -80px"></div>
          </div>
        </div>

        <div class="center-game-area">
          <div class="deck-section">
            <h3>Draw</h3>
            <div class="deck-pile" id="draw-pile">
              <div class="playing-card back"></div>
            </div>
          </div>

          <div class="discard-section" style="margin-left: 2rem">
            <h3>Discard</h3>
            <div class="discard-pile">
              <% if (typeof topCard !== 'undefined' && topCard) { %>
              <div
                class="playing-card <%= topCard.card_color %>"
                data-value="<%= getCardDisplayValue(topCard.card_symbol) %>"
                data-symbol="<%= topCard.card_symbol %>"
              ></div>
              <% } else { %>
              <div class="playing-card red" data-value="7" data-symbol="seven"></div>
              <% } %>
            </div>
          </div>
        </div>

        <div class="game-chat">
          <div id="chat-area">
            <div id="message-listing" class="message-listing">
              <div class="chat-message system">
                <span class="message-text">Welcome to Uno!</span>
              </div>
            </div>
            <div id="message-submit" class="message-submit" style="padding: 10px">
              <input type="text" placeholder="Chat..." />
              <button class="btn-primary">Send</button>
            </div>
          </div>
        </div>

        <div class="player-area">
          <div class="player-hand">
            <% if (typeof myCards === 'undefined' || myCards.length === 0) { %>
            <div class="playing-card red" data-value="1"></div>
            <div class="playing-card blue" data-value="skip"></div>
            <div class="playing-card green" data-value="reverse"></div>
            <div class="playing-card yellow" data-value="draw2"></div>
            <div class="playing-card black" data-value="wild"></div>
            <% } else { %>
            <% myCards.forEach(card => { %>
            <div
              class="playing-card <%= card.card_color %>"
              data-value="<%= getCardDisplayValue(card.card_symbol) %>"
              data-symbol="<%= card.card_symbol %>"
              data-id="<%= card.id %>"
            ></div>
            <% }) %>
            <% } %>
          </div>
          <h3 style="color: white; margin-top: 10px">Your Hand</h3>
        </div>
      </div>
			    <template id="template-chat-message">
      <div class="chat-message">
        <div class="message-header">
          <span class="message-username"></span>
          <span class="message-time"></span>
        </div>
        <span class="message-text"></span>
      </div>
    </template>

    </div>

    <template id="card-template">
      <div class="playing-card"></div>
    </template>
  </body>
</html>
